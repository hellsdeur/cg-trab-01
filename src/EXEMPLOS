#RECORTE DE POLIGONO 1
pts = [(-5,20),(-3, -1),(5, -2)]
xmin = -1
xmax = 10
ymin = -9
ymax = 9

obj = recorte_poligono.RecortePoligono(pts, xmin, xmax, ymin, ymax)
tela.destacarJanela(xmin, xmax, ymin, ymax)
tela.Desenhar(obj.saida, azul)

