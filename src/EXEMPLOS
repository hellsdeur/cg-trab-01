obj = varredura.Varredura(pts)
tela.Desenhar(obj.saida, azul)


#SCANLINE 2
pts = [(-6,-6), (8,-4), (8,12), (0,8), (-8,14)]

obj = varredura.Varredura(pts)
tela.Desenhar(obj.saida, azul)

obj = polilinha.Polilinha(pts, fechar=True)
tela.Desenhar(obj.saida, vermelho)


